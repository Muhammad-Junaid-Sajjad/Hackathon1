# RAG Chatbot API Environment Variables
# Copy this file to .env and fill in your values

# OpenAI API Key (Required)
OPENAI_API_KEY=sk-your-openai-api-key

# Qdrant Cloud (Required for vector search)
QDRANT_URL=https://your-cluster-id.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key

# Neon Serverless Postgres (Required for user data)
NEON_DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require

# Better-Auth Configuration (Required for authentication)
BETTER_AUTH_SECRET=your-secret-key-min-32-chars
BETTER_AUTH_URL=http://localhost:3000

# Admin API Key (for indexing content)
ADMIN_API_KEY=your-admin-api-key

# Optional: MCP Server Configuration
MCP_SERVER_URL=http://localhost:3001
